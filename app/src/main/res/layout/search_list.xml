                        android:textColor="@color/pale_yellow"
                        android:textSize="15sp" />
                    <CheckBox
                        android:id="@+id/Peppers"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:text="Peppers"
                        android:textSize="15sp"
                        android:textColor="@color/pale_yellow"/>
                    <CheckBox
                        android:id="@+id/Potatoes"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:text="Potatoes"
                        android:textSize="15sp"
                        android:textColor="@color/pale_yellow"/>
                    <CheckBox
                        android:id="@+id/Pumpkins"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:text="Pumpkins"
                        android:textColor="@color/pale_yellow"
                        android:textSize="15sp" />

                    <CheckBox
                        android:id="@+id/Radishes"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:text="Radishes"
                        android:textColor="@color/pale_yellow"
                        android:textSize="15sp" />
                    <CheckBox
                        android:id="@+id/Spinach"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:text="Spinach"
                        android:textSize="15sp"
                        android:textColor="@color/pale_yellow"/>
