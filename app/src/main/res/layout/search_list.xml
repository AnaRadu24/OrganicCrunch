                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:text="Cherries"
                        android:textSize="15sp"
                        android:textColor="@color/pale_yellow"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <CheckBox
                        android:id="@+id/Cranberries"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:text="Cranberries"
                        android:textSize="15sp"
                        android:textColor="@color/pale_yellow"/>
                    <CheckBox
                        android:id="@+id/Grapes"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:text="Grapes"
                        android:textSize="15sp"
                        android:textColor="@color/pale_yellow"/>
                    <CheckBox
                        android:id="@+id/Melon"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:text="Melon"
                        android:textSize="15sp"
                        android:textColor="@color/pale_yellow"/>
                    <CheckBox
                        android:id="@+id/Nectarine"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:text="Nectarines"
                        android:textSize="15sp"
                        android:textColor="@color/pale_yellow"/>
                    <CheckBox
                        android:id="@+id/Peaches"
                        android:layout_width="wrap_content"
