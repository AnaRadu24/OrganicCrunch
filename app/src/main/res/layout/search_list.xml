                        android:textColor="@color/pale_yellow"
                        android:textSize="15sp" />
                    <CheckBox
                        android:id="@+id/Garlic"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:text="Garlic"
                        android:textSize="15sp"
