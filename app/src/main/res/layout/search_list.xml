                        android:id="@+id/Watermelon"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:text="Watermelon"
                        android:textColor="@color/pale_yellow"
                        android:textSize="15sp" />
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/Homemade_preserves"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="HOMEMADE PRESERVES"
                android:gravity="center"
                android:textColor="@color/salmon"
                android:textSize="20sp"
                android:paddingTop="5dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/primary"
                android:orientation="horizontal"
                android:paddingTop="5dp"
                android:paddingBottom="5dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <CheckBox
                        android:id="@+id/Cans"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:text="Cans"
                        android:textColor="@color/pale_yellow"
                        android:textSize="15sp" />

                    <CheckBox
                        android:id="@+id/Honey"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:text="Honey"
                        android:textColor="@color/pale_yellow"
                        android:textSize="15sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">
                    <CheckBox
                        android:id="@+id/Jam"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:text="Jam"
                        android:textColor="@color/pale_yellow"
                        android:textSize="15sp" />

                    <CheckBox
                        android:id="@+id/Pickles"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:text="Pickles"
                        android:textColor="@color/pale_yellow"
                        android:textSize="15sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">
                    <CheckBox
                        android:id="@+id/Sauces"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:text="Sauces"
                        android:textColor="@color/pale_yellow"
                        android:textSize="15sp" />

                    <CheckBox
                        android:id="@+id/Zacusca"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:text="Zacusca"
                        android:textColor="@color/pale_yellow"
                        android:textSize="15sp" />
                </LinearLayout>

            </LinearLayout>

        <TextView
            android:id="@+id/Meat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="5dp"
            android:text="MEAT"
            android:textColor="@color/salmon"
            android:textSize="20sp" />

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/primary"
                android:orientation="horizontal"
                android:paddingTop="5dp"
                android:paddingBottom="5dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <CheckBox
                        android:id="@+id/Beef"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:text="Beef"
                        android:textColor="@color/pale_yellow"
                        android:textSize="15sp" />

                    <CheckBox
                        android:id="@+id/Chicken"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:text="Chicken"
                        android:textColor="@color/pale_yellow"
                        android:textSize="15sp" />

                    <CheckBox
                        android:id="@+id/Duck"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:text="Duck"
                        android:textColor="@color/pale_yellow"
                        android:textSize="15sp" />

                    <CheckBox
                        android:id="@+id/Fish"
                        android:layout_width="wrap_content"
