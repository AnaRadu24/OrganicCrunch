                            android:text="Hen"
                            android:textColor="@color/pale_yellow"
                            android:textSize="14sp" />
                        <CheckBox
                            android:id="@+id/Lamb"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:text="Lamb"
                            android:textColor="@color/pale_yellow"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">
                        <CheckBox
                            android:id="@+id/Mutton"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:text="Mutton"
                            android:textColor="@color/pale_yellow"
                            android:textSize="14sp" />

                        <CheckBox
                            android:id="@+id/Pork"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:text="Pork"
                            android:textColor="@color/pale_yellow"
                            android:textSize="14sp" />
                        <CheckBox
                            android:id="@+id/Rabbit"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:text="Rabbit"
                            android:textColor="@color/pale_yellow"
                            android:textSize="14sp" />
                        <CheckBox
                            android:id="@+id/Turkey"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
