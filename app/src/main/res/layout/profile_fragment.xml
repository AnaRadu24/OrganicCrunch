                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:text="Lettuce"
                            android:textColor="@color/pale_yellow"
                            android:textSize="14sp" />
                        <CheckBox
                            android:id="@+id/Mushrooms"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:text="Mushrooms"
                            android:textSize="14sp"
                            android:textColor="@color/pale_yellow"/>
                        <CheckBox
                            android:id="@+id/Onions"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:text="Onions"
                            android:textSize="14sp"
                            android:textColor="@color/pale_yellow"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">

                        <CheckBox
                            android:id="@+id/Parsnip"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:text="Parsnip"
                            android:textColor="@color/pale_yellow"
                            android:textSize="14sp" />

                        <CheckBox
                            android:id="@+id/Peas"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:text="Peas"
                            android:textColor="@color/pale_yellow"
                            android:textSize="14sp" />
                        <CheckBox
                            android:id="@+id/Peppers"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:text="Peppers"
                            android:textSize="14sp"
                            android:textColor="@color/pale_yellow"/>
                        <CheckBox
                            android:id="@+id/Potatoes"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:text="Potatoes"
                            android:textSize="14sp"
                            android:textColor="@color/pale_yellow"/>
                        <CheckBox
                            android:id="@+id/Pumpkins"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:text="Pumpkins"
                            android:textColor="@color/pale_yellow"
                            android:textSize="14sp" />

                        <CheckBox
                            android:id="@+id/Radishes"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:text="Radishes"
                            android:textColor="@color/pale_yellow"
                            android:textSize="14sp" />
                        <CheckBox
                            android:id="@+id/Spinach"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:text="Spinach"
                            android:textSize="14sp"
                            android:textColor="@color/pale_yellow"/>
                        <CheckBox
                            android:id="@+id/Tomatoes"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:text="Tomatoes"
                            android:textSize="14sp"
                            android:textColor="@color/pale_yellow"/>
                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:id="@+id/Fruit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="FRUIT"
                    android:gravity="center"
                    android:textColor="@color/salmon"
                    android:textSize="20sp"
                    android:paddingTop="5dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/primary"
                    android:orientation="horizontal"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">

                        <CheckBox
                            android:id="@+id/Apples"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:text="Apples"
                            android:textColor="@color/pale_yellow"
                            android:textSize="14sp" />

                        <CheckBox
                            android:id="@+id/Apricots"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:text="Apricots"
                            android:textColor="@color/pale_yellow"
                            android:textSize="14sp" />

                        <CheckBox
                            android:id="@+id/Blueberries"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:text="Blueberries"
                            android:textSize="14sp"
                            android:textColor="@color/pale_yellow"/>
                        <CheckBox
                            android:id="@+id/Citrus"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:text="Citrus"
                            android:textSize="14sp"
                            android:textColor="@color/pale_yellow"/>
                        <CheckBox
                            android:id="@+id/Cherries"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:text="Cherries"
                            android:textSize="14sp"
                            android:textColor="@color/pale_yellow"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">

                        <CheckBox
                            android:id="@+id/Cranberries"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:text="Cranberries"
                            android:textSize="14sp"
                            android:textColor="@color/pale_yellow"/>
                        <CheckBox
                            android:id="@+id/Grapes"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:text="Grapes"
                            android:textSize="14sp"
                            android:textColor="@color/pale_yellow"/>
                        <CheckBox
                            android:id="@+id/Melon"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:text="Melon"
                            android:textSize="14sp"
                            android:textColor="@color/pale_yellow"/>
                        <CheckBox
                            android:id="@+id/Nectarine"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:text="Nectarines"
                            android:textSize="14sp"
                            android:textColor="@color/pale_yellow"/>
                        <CheckBox
                            android:id="@+id/Peaches"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:text="Peaches"
                            android:textSize="14sp"
                            android:textColor="@color/pale_yellow"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">

                        <CheckBox
                            android:id="@+id/Pears"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:text="Pears"
                            android:textColor="@color/pale_yellow"
                            android:textSize="14sp" />
                        <CheckBox
                            android:id="@+id/Plums"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:text="Plums"
                            android:textColor="@color/pale_yellow"
                            android:textSize="14sp" />
                        <CheckBox
                            android:id="@+id/Raspberries"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:text="Raspberries"
                            android:textColor="@color/pale_yellow"
                            android:textSize="14sp" />
                        <CheckBox
                            android:id="@+id/Strawberries"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:text="Strawberries"
                            android:textColor="@color/pale_yellow"
                            android:textSize="14sp" />
                        <CheckBox
                            android:id="@+id/Watermelon"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:text="Watermelon"
                            android:textColor="@color/pale_yellow"
                            android:textSize="14sp" />
                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:id="@+id/Homemade_preserves"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="HOMEMADE PRESERVES"
                    android:gravity="center"
                    android:textColor="@color/salmon"
                    android:textSize="20sp"
                    android:paddingTop="5dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/primary"
                    android:orientation="horizontal"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">

                        <CheckBox
                            android:id="@+id/Cans"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:text="Cans"
                            android:textColor="@color/pale_yellow"
                            android:textSize="14sp" />

                        <CheckBox
                            android:id="@+id/Honey"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:text="Honey"
                            android:textColor="@color/pale_yellow"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">
                        <CheckBox
                            android:id="@+id/Jam"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:text="Jam"
                            android:textColor="@color/pale_yellow"
                            android:textSize="14sp" />

                        <CheckBox
                            android:id="@+id/Pickles"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:text="Pickles"
                            android:textColor="@color/pale_yellow"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">
                        <CheckBox
                            android:id="@+id/Sauces"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:text="Sauces"
                            android:textColor="@color/pale_yellow"
