<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollViewProfile"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@color/primary"
    android:scrollbars="none"  >

    <LinearLayout

        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="7dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="20dp"
            android:layout_centerInParent="true"
            android:background="@color/primary_light">

            <LinearLayout
                android:layout_weight="4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/FarmerName"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Profile Name"
                    android:textColor="@color/salmon"
                    android:textSize="25sp"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:paddingTop="10dp"
                android:paddingBottom="3dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">
                <TextView
                    android:id="@+id/FarmerContact"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Contact:"
                    android:textColor="@color/avocado"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/FarmerTelephone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="Phone number"
                    android:textColor="@color/primary_text"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:paddingBottom="3dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/FarmerAdress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Location:"
                    android:textColor="@color/avocado"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/FarmAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="Address"
                    android:textColor="@color/primary_text"
                    android:textSize="15sp" />
            </LinearLayout>

            <RatingBar
                android:id="@+id/FarmerRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:isIndicator="true"
                android:numStars="5"
                android:rating="5"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/products"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:gravity="center"/>


        </LinearLayout>

        <LinearLayout
            android:padding="7dp"
            android:layout_marginTop="15dp"
            android:background="@color/primary_light"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Update profile information!"
                android:textColor="@color/primary_text"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:textSize="20sp"/>

            <EditText
                android:maxLines="1"
                android:padding="3dp"
                android:id="@+id/getFirstName"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/icons"
                android:hint="First Name"
                android:textColorHint="@color/secondary_text" />

            <EditText
                android:maxLines="1"
                android:padding="3dp"
                android:id="@+id/getFamilyName"
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/icons"
                android:hint="Family Name"
                android:textColorHint="@color/secondary_text" />

            <EditText
                android:inputType="phone"
                android:padding="3dp"
                android:id="@+id/getTelephone"
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/icons"
                android:hint="Phone"
                android:textColorHint="@color/secondary_text" />

            <EditText
                android:maxLines="3"
                android:padding="3dp"
                android:id="@+id/getInfo"
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/icons"
                android:hint="Address"
                android:textColorHint="@color/secondary_text" />

            <TextView
                android:layout_margin="10dp"
                android:id="@+id/addProduct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/accent"
                android:text="Add or remove products from the list below"
                android:textColor="@color/secondary_text"
                android:padding="5dp"
                android:layout_gravity="center"/>

            <TextView
                android:padding="5dp"
                android:layout_marginBottom="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Check the products you will sell from now on."
                android:layout_gravity="center"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/primary_light"
                android:padding="0dp">

                <TextView
                    android:id="@+id/Vegetables"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="VEGETABLES"
                    android:gravity="center"
                    android:textColor="@color/salmon"
                    android:textSize="20sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/primary"
                    android:orientation="horizontal"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">

                        <CheckBox
                            android:id="@+id/Beans"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:text="Beans"
                            android:textColor="@color/pale_yellow"
                            android:textSize="14sp" />

                        <CheckBox
                            android:id="@+id/Beetroot"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:text="Beetroot"
                            android:textColor="@color/pale_yellow"
                            android:textSize="14sp" />
                        <CheckBox
                            android:id="@+id/Cabbage"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:text="Cabbage"
                            android:textSize="14sp"
                            android:textColor="@color/pale_yellow"/>
                        <CheckBox
                            android:id="@+id/Carrots"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:text="Carrots"
                            android:textSize="14sp"
                            android:textColor="@color/pale_yellow"/>
                        <CheckBox
                            android:id="@+id/Cauliflower"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:text="Cauliflower"
                            android:textColor="@color/pale_yellow"
                            android:textSize="14sp" />
                        <CheckBox
                            android:id="@+id/Celery"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:text="Celery"
                            android:textSize="14sp"
                            android:textColor="@color/pale_yellow"/>
                        <CheckBox
                            android:id="@+id/Corn"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:text="Corn"
                            android:textSize="14sp"
                            android:textColor="@color/pale_yellow"/>
                        <CheckBox
                            android:id="@+id/Cucumbers"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:text="Cucumbers"
                            android:textSize="14sp"
                            android:textColor="@color/pale_yellow"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">

                        <CheckBox
                            android:id="@+id/Eggplant"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:text="Eggplant"
                            android:textColor="@color/pale_yellow"
                            android:textSize="14sp" />

                        <CheckBox
                            android:id="@+id/Fresh_herbs"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:text="Fresh herbs"
                            android:textColor="@color/pale_yellow"
                            android:textSize="14sp" />
                        <CheckBox
                            android:id="@+id/Garlic"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:text="Garlic"
                            android:textSize="14sp"
                            android:textColor="@color/pale_yellow"/>
                        <CheckBox
                            android:id="@+id/Kohlrabi"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:text="Kohlrabi"
                            android:textSize="14sp"
                            android:textColor="@color/pale_yellow"/>
                        <CheckBox
                            android:id="@+id/Leeks"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:text="Leeks"
                            android:textColor="@color/pale_yellow"
                            android:textSize="14sp" />

                        <CheckBox
