<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_margin="10dp"
        android:id="@+id/recycler_template"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary"
        android:padding="10dp">

        <TextView
            android:id="@+id/farmerName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:padding="5dp"
            android:text="Raluca Tudor"
            android:textColor="@color/accent"
            android:textSize="30sp" />

        <TextView
                android:id="@+id/farmerEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="tudorr30@gmail.com"
                android:gravity="left"
                android:textSize="20sp"
                android:padding="2dp"
                android:textColor="@color/icons" />

        <TextView
            android:id="@+id/farmerPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0737039969"
            android:gravity="left"
            android:textSize="20sp"
            android:padding="2dp"
            android:textColor="@color/icons" />

    <TextView
            android:layout_marginLeft="3dp"
            android:id="@+id/farmerData"
            android:padding="7dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/accent"
            android:text="MORE INFORMATION"
            android:textColor="@color/secondary_text"
            android:textSize="13sp"/>

</LinearLayout>